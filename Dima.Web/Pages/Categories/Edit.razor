@page "/categories/edit/{Id}"
@inherits EditCategoryPage

<PageTitle>Atualizar Categoria</PageTitle>

<MudText Typo="Typo.h3">Editar Categoria</MudText>
@if (!IsBusy)
{
    <MudPaper Class="pa-8 mt-4">
        <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
            <DataAnnotationsValidator/>

            <MudTextField
                Class="mb-5"
                Label="Título"
                HelperText="Campo obrigatório"
                @bind-Value="InputModel.Title"
                For="@(() => InputModel.Title)"
            />

            <MudTextField
                Label="Descrição"
                Lines="5"
                HelperText="Campo obrigatório"
                @bind-Value="InputModel.Description"
                For="@(() => InputModel.Description)"
            />
        
            @if (!IsBusyButton)
            {
                <MudButton
                    ButtonType="ButtonType.Submit"
                    Variant="Variant.Filled"
                    Color="Color.Primary"
                    Class="mt-4"
                >
                    Editar
                </MudButton>
            }
            else
            {
                <MudProgressLinear Class="mt-4" Color="Color.Info" Indeterminate="true"/>
            }
        </EditForm>
    </MudPaper>
}
else
{
    <MudPaper Class="pa-8 mt-4">
        <MudSkeleton Height="55px"/>
        <MudSkeleton Height="110px"/>
        <MudSkeleton Height="55px"/>
        <MudSkeleton Height="110px"/>
        <MudSkeleton Height="55px"/>
    </MudPaper>    
}