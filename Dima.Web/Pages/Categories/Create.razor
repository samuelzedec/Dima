@page "/categories/add"
@inherits CreateCategoryPage

<PageTitle>Criar Categoria</PageTitle>

<MudText Typo="Typo.h3">Nova Categoria</MudText>
<MudPaper Class="pa-8 mt-4">
    <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
        <DataAnnotationsValidator/>

        <MudTextField
            Class="mb-5"
            Label="Título"
            HelperText="Campo obrigatório"
            @bind-Value="InputModel.Title"
            For="@(() => InputModel.Title)"
        />

        <MudTextField
            Label="Descrição"
            Lines="5"
            HelperText="Campo obrigatório"
            @bind-Value="InputModel.Description"
            For="@(() => InputModel.Description)"
        />
        
        @if (!IsBusy)
        {
            <MudButton
                ButtonType="ButtonType.Submit"
                Variant="Variant.Filled"
                Color="Color.Primary"
                Class="mt-4"
            >
                Salvar
            </MudButton>
        }
        else
        {
            <MudProgressLinear Class="mt-4" Color="Color.Info" Indeterminate="true"/>
        }
    </EditForm>
</MudPaper>